<% if @user.passive_notifications != [] %>
  <% @user.passive_notifications.each do |notification|%>
    <%= link_to item_path(notification.item_id), local:true do %>
      <div class="notifications">
        <div class="notification-body">
          <%# 通知の内容 %>
          <div class="notification-message">
          <% binding.pry%>
            <% if notification.action == "comment"%>
              <%="#{notification.visitor.name}さんが「#{notification.item.name}」に対してコメントしました"%>
            <% else %> 
                <%# 通知がorderだった時のメッセージ %>
            <% end %>
          </div>
          <%# コメントされた時間 %>
          <div class="comment-time">
            <i class="far fa-clock"></i>
            <%= notification.created_at.to_s(:datetime_jp) %>
          </div>
        </div>
        <%# 矢印マーク %>
        <i class="fas fa-angle-right fa-2x notication-mark"></i>
      </div>
    <% end %>
  <% end %>
<% else %>
  <div class="nothing-notifications">
    <%="現在お知らせはありません"%>
  </div>
<% end %>

