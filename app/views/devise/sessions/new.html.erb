<div class="wrapper">
  <div class="user-form-container">
    <div class="user-title-field">
        <%= link_to (image_tag src="logo-image.png", class: "logo-image" ),root_path %>
        <div class="user-form-title">ログイン</div>
    </div>
    <div class="user-form-wraps">
      <%= form_with model:@user, url: user_session_path, local: true do |f| %>
        <%= render 'shared/error_message', model: f.object %>
        <div class="user-form-wrap">
          <div class="user-form-text">
            <label for="user_email">Eメール</label>
          </div>
          <%= f.text_field :email, class: "user-form", placeholder:"登録時のメールアドレス" %>
        </div>

        <div class="user-form-wrap">
          <div class="user-form-text">
            <label for="user_password">パスワード</label>
          </div>
          <%= f.text_field :password, class: "user-form", placeholder:"登録時のパスワード", type: "password" %>
        </div>

        <div class="form_submit">
          <%= f.submit "ログイン", class: "user-form-btn" %>
        </div>
      <% end%>
        <div class="get-sign-up">
          <p>アカウントをお持ちでない場合は <%= link_to "新規登録", new_user_registration_path, class: "get-sign-up-btn" %></p>
        </div>
    </div>
  </div>
</div>