<div class="wrapper">
  
  <div class="user-form-container">
    <div class="user-title-field">
      <%= link_to (image_tag src="logo-image.png", class: "logo-image" ),root_path %>
      <div class="user-form-title">会員情報入力</div>
    </div>
    <div class="user-form-wraps">
      <%= form_with model:@user, url: user_registration_path, local: true  do |f| %>
        <div class="user-form-wrap">
          <div class="user-form-text">
            <label>名前</label><span class="required">必須</span>
          </div>
          <%= f.text_field :name, class: "user-form", placeholder: "例）山田 太郎"%>
        </div>

        <div class="user-form-wrap">
          <div class="user-form-text">
            <label>Eメール</label><span class="required">必須</span>
          </div>
          <%= f.text_field :email, class: "user-form", placeholder: "PC・携帯どちらでも可" %>
        </div>

        <div class="user-form-wrap">
          <div class="user-form-text">
            <label>パスワード</label><span class="required">必須</span>
          </div>
          <%= f.text_field :password, class: "user-form", placeholder: "８文字以上の半角英数混合", type: "password" %>
        </div>

        <div class="user-form-wrap">
          <div class="user-form-text">
            <label>パスワード（確認用）</label><span class="required">必須</span>
          </div>
          <%= f.text_field :password_confirmation, class: "user-form", placeholder: "パスワードを再入力してください", type: "password" %>
        </div>

        <div class="user-form-wrap">
          <div class="user-form-text">
            <label>会社名</label>
          </div>
          <%= f.text_field :company_name, class: "user-form", placeholder: "※個人での利用の方は省略可" %>
        </div>

        <div class="form-submit">
          <%= f.submit "新規登録", class: "user-form-btn"%>
        </div>
      <% end%>
    </div>
  </div>
</div>