<div class="wrapper">
  <div class="item-form-container"> 
    <div class="item-title-field">
      <%= link_to (image_tag src="logo-image.png", class: "logo-image" ),root_path %>
      <h2 class="item-form-title">商品情報入力</h2>
    </div>
    <div class="item-form-wraps">
      <%= form_with model: @item, url:item_path(@item), local: true do |f|%>
        <%= render 'shared/error_message', model: f.object %>
        <div class="item-form-wrap">
          <div class="item-form-text">
            <label for="item_name">商品名</label><span class="required">必須</span>
          </div>
          <%= f.text_field :name, placeholder: "商品名", class: "item-form" %>
        </div>

        <div class="item-form-wrap">
          <div class="item-form-text">
            <label for="item_image">画像</label><span class="required">必須</span>
          </div>
          <%= f.file_field :image, placeholder: "", value: @item.image%>
        </div>

        <div class="item-form-wrap">
          <div class="item-form-text">
            <label for="item_explanation">商品の説明</label><span class="required">必須</span>
          </div>
          <%= f.text_area :explanation, placeholder: "商品の説明(120文字)", class: "item-explanation-form",size: "20x6" %>
        </div>

        <div class="item-form-wrap">
          <div class="item-form-text">
            <label for="item_size">サイズ</label><span class="required">必須</span>
          </div>
          <%= f.text_field :size, placeholder: "例）15cm" , class: "item-form"%>
        </div>

        <div class="form-half-wrap">
          <div class="item-form-text">
            <label for="item_category_id">カテゴリー</label><span class="required">必須</span>
          </div>
          <%= f.collection_select :category_id, Category.all, :id, :name, {},{class: "select-form"} %>
        </div>

        <div class="form-half-wrap">
          <div class="item-form-text">
            <label for="item_status">商品の状態</label><span class="required">必須</span>
          </div>
          <%= f.collection_select :status_id, Status.all, :id, :name, {},{class: "select-form"} %>
        </div>

        <div class="form-half-wrap">
          <div class="item-form-text">
            <label for="item_delivery_fee">配送料</label><span class="required">必須</span>
          </div>
          <%= f.collection_select :delivery_fee_id, DeliveryFee.all, :id, :name, {},{class: "select-form"} %>
        </div>

        <div class="form-half-wrap">
          <div class="item-form-text">
            <label for="item_delivery_date">発送までの日数</label><span class="required">必須</span>
          </div>
          <%= f.collection_select :delivery_date_id, DeliveryDate.all, :id, :name, {},{class: "select-form"} %>
        </div>

        <div class="form-half-wrap">
          <div class="item-form-text">
            <label for="item_stock">在庫数</label><span class="required">必須</span>
          </div>
          <%= f.number_field :stock, placeholder: "半角数字 例）12", class: "item-form",style: "width:150px",min: 1 %>
        </div>

        <div class="form-half-wrap">
          <div class="item-form-text">
            <label for="item_price">１週間のレンタル価格（単価）</label><span class="required">必須</span>
          </div>
          <span>￥</span>
          <%= f.text_field :price, placeholder: "半角数字 例）500" , class: "item-price-form"%>
        </div>

        <div class="form-wrap">
          <%= f.submit "再出品する", class: "item-form-btn"%>
        </div>

      <% end %>
    </div>  
  </div>
</div>